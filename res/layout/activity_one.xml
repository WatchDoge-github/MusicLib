<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#643232"
    android:scrollbars="vertical"
    tools:context=".One">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/img1" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:layout_centerHorizontal="true"
                android:text="Cover Gallery"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/ms"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_below="@id/textView1"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ms" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms"
                android:layout_centerHorizontal="true"
                android:text="Watch_Doge - Midnight Session"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/ms2"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ms2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms2"
                android:layout_centerHorizontal="true"
                android:text="Watch_Doge - Midnight Session II"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/fadingSlowly"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_below="@id/textView3"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/fading_slowly" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fadingSlowly"
                android:layout_centerHorizontal="true"
                android:text="Fuji IV - Fading Slowly (single)"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/DAOB"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_below="@id/textView4"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/daob" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DAOB"
                android:layout_centerHorizontal="true"
                android:text="Fuji IV - Dreams: Out And Beyond (single)"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/APTNW"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_below="@id/textView5"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/aptnw" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/APTNW"
                android:layout_centerHorizontal="true"
                android:text="Fuji IV - A Place That Never Was (single)"
                android:paddingBottom="20dp"/>

            <ImageView
                android:id="@+id/DAOBalbum"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:layout_below="@id/textView6"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/daobalbum" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DAOBalbum"
                android:layout_centerHorizontal="true"
                android:text="Fuji IV - Dreams: Out And Beyond"
                android:paddingBottom="20dp"/>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>